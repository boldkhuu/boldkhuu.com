{
  "name": "boldkhuu.com",
  "description": "Boldkhuu's personal website",
  "version": "0.3.0",
  "author": {
    "name": "Boldkhuu Batbaatar",
    "email": "hi@boldkhuu.com",
    "url": "http://boldkhuu.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/boldkhuu/boldkhuu.com"
  },
  "license": "ISC",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "format": "prettier --write '?(components|pages)/**/*.js'",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix"
    ],
    "*.{js,json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "next": "^15.5.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "pinst": "^3.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "@eslint/eslintrc": "^3"
  },
  "packageManager": "pnpm@10.0.0"
}
